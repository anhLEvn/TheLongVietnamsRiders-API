@model IEnumerable<WebAppAPI_TLVNsR.Models.Tour>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TitleTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItineraryFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthTour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinParticipant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxParticipant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItineraryFileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthTour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinParticipant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxParticipant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageFileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
