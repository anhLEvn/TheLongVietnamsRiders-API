@model WebAppAPI_TLVNsR.Models.TourCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>TourCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameCategory" class="control-label"></label>
                <input asp-for="NameCategory" class="form-control" />
                <span asp-validation-for="NameCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescriptionCate" class="control-label"></label>
                <input asp-for="DescriptionCate" class="form-control" />
                <span asp-validation-for="DescriptionCate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvatarImageFileName" class="control-label"></label>
                <input asp-for="AvatarImageFileName" class="form-control" type="file" onchange="document.getElementById('avatarImageTourCate').src = window.URL.createObjectURL(this.files[0])" />
                <img id="avatarImageTourCate" class="img-fluid" alt="tour category image" />
                <span asp-validation-for="AvatarImageFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
